extends ../layout-home

block pageMeta
  //- 

block content

  //- 
  //- Welcome message
  section#home__welcome.col-md-8.col-lg-6.col-xl-5.col-xxl-4.p-5.mt-xl-5
    .row.justify-content-center.text-center
      .col-12.mt-5
        h1.fst-italic.text-bas-relief= t('index:home.welcome')
      //- .col-sm-8.col-md-10.col-xl-12.mt-4 

  //- 
  //- Login form
  section#home__login.col-md-8.col-lg-6.col-xl-5.col-xxl-4.mt-xl-5
    section
      include ../blocks.pug
      +brandBadge()
      
      .card.mb-5.border-0.shadow-lg
        .card-body.p-4.p-md-5
          h2.card-title.fs-5.mt-5.mb-4= t('index:home.reception')

          if errors.invalid_credentials
            .alert.alert-warning
              span= t('session.loginError')
          
          include ../blocks.pug
          +loginForm()
